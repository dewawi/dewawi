	if($i > 1) {
		$pdf->Image($logo, 155, 10, 40, 0, '', $website);

		$y = $pdf->GetY();
		$pdf->SetY(20);

		//New page info box
		$pdf->setCellPaddings(1, 1, 0, 0);
		$pdf->SetFont('freesans', '', 8);
		$pdf->Write(0, $this->translate('DOCUMENTS_SALES_ORDER_ID').' ');
		$pdf->SetFont('freesansb', 'B', 8);
		if($salesorderid) $pdf->Write(0, $salesorderid.'     ');
		else $pdf->Write(0, ' - - - - -     ');
		$pdf->SetFont('freesans', '', 8);
		$pdf->Write(0, $this->translate('DOCUMENTS_SALES_ORDER_DATE').' ');
		$pdf->SetFont('freesansb', 'B', 8);
		if($salesorderdate) $pdf->Write(0, $salesorderdate.'     ');
		else $pdf->Write(0, ' - - - - -     ');
		$pdf->SetFont('freesans', '', 8);
		$pdf->Write(0, $this->translate('DOCUMENTS_CUSTOMER_ID').' ');
		$pdf->SetFont('freesansb', 'B', 8);
		$pdf->Write(0, $contactid);
		$pdf->ln();

		$pdf->setCellPaddings(1, 0, 0, 0);

		$pdf->SetFont('freesansb', 'B', 8);

		//POSITIONS HEADER
		$pdf->Cell(10, 5, $this->translate('DOCUMENTS_POSITION'), 'LTB');
		$pdf->setCellPaddings(0, 0, 0, 0);
		$pdf->Cell(98, 5, $this->translate('DOCUMENTS_DESCRIPTION'), 'TB');
		$pdf->Cell(10, 5, $this->translate('DOCUMENTS_QUANTITY'), 'TB');
		$pdf->Cell(12, 5, $this->translate('DOCUMENTS_UOM'), 'TB', 0, 'C');
		$pdf->Cell(25, 5, $this->translate('DOCUMENTS_PRICE_SINGLE'), 'TB', 0, 'C');
		$pdf->Cell(25, 5, $this->translate('DOCUMENTS_PRICE_TOTAL'), 'TBR', 0, 'C');
		$pdf->ln(5);
	}

	$pdf->setCellPaddings(0, 2, 0, 2);
	$pdf->SetAutoPageBreak(false);
	$pdf->SetFont('freesans', '', 7);

	//Footer
	$x = 12;
	$pdf->SetY(270);
	foreach($this->footers as $footer) {
		$width = $footer->width ? $footer->width : 40;
		$pdf->MultiCell($width, 3, $footer->text, 0, 'L', false, 0, $x);
		$x += $width;
	}

	// Page number
	$pdf->SetY(284);
	$pdf->SetFont('helvetica', 'I', 8);
	$pdf->Cell(0, 10, $this->translate('DOCUMENTS_PAGE').' '.$pdf->getAliasNumPage().'/'.$pdf->getAliasNbPages(), 0, false, 'C', 0, '', 0, false, 'T', 'M');
	$pdf->SetFont('freesans', '', 8);

	$pdf->SetAutoPageBreak(true, 30);

	$pdf->SetY($y);
	++$i;
}

//Close and output PDF document
if($this->action == 'download') {
	if($salesorderid) $pdf->Output($salesorderid.' '.$this->translate('SALES_ORDERS').' '.$billingName1.'.pdf', 'D');
	else $pdf->Output($this->translate('DOCUMENTS_SAMPLE').' '.$this->translate('SALES_ORDERS').' '.$billingName1.'.pdf', 'D');
} else {
    $path = BASE_PATH.'/files/contacts/';
    $dir1 = substr($contactid, 0, 1).'/';
    if(strlen($contactid) > 1) $dir2 = substr($contactid, 1, 1).'/';
    else $dir2 = '0/';
	if($salesorderid) {
		$pdf->Output($path.$dir1.$dir2.$contactid.'/'.$this->translate('SALES_ORDERS').'-'.$salesorderid.'.pdf', 'F');
		$html = '<iframe src="'.$this->baseUrl().'/files/contacts/'.$dir1.$dir2.$contactid.'/'.$this->translate('SALES_ORDERS').'-'.$salesorderid.'.pdf?'.time().'" width="900px" height="500px">';
	} else {
		$pdf->Output(BASE_PATH.'/cache/salesorder/'.$id.'.pdf', 'F');
		$html = '<iframe src="'.$this->baseUrl().'/cache/salesorder/'.$id.'.pdf?'.time().'" width="900px" height="500px">';
	}
	echo $html;
}

function sample($pdf, $txt) {
	// set alpha to semi-transparency
	$pdf->SetAlpha(0.5);
	$pdf->SetTextColor(225, 225, 225);
	$y = $pdf->GetY();
	$width = $pdf->GetX();
	$pdf->setY(140);
	$pdf->SetFont('helvetica', 'B', 75);
	$pdf->Write(0, $txt, '', false, 'C');
	//$pdf->Cell(0, 200, $txt, 0, false, 'C', 0, '', 0, false, 'T', 'M');
	$pdf->SetY($y);
	$pdf->setX($width);
	$pdf->SetTextColor(0, 0, 0);
	// restore full opacity
	$pdf->SetAlpha(1);
}

function cancelled($pdf, $txt) {
	// set alpha to semi-transparency
	$pdf->SetAlpha(0.5);
	$pdf->SetTextColor(225, 225, 225);
	$y = $pdf->GetY();
	$width = $pdf->GetX();
	$pdf->setY(140);
	$pdf->SetFont('helvetica', 'B', 75);
	$pdf->Write(0, $txt, '', false, 'C');
	$pdf->SetY($y);
	$pdf->setX($width);
	$pdf->SetTextColor(0, 0, 0);
	// restore full opacity
	$pdf->SetAlpha(1);
}
