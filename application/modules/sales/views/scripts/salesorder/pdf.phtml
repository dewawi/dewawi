if($deliverydate != '0000-00-00') $deliverydate = implode('.', array_reverse(explode('-', $deliverydate)));
else $deliverydate = 0;
$vatin = $this->salesorder['vatin'];
$header = $this->salesorder['header'];
$footer = $this->salesorder['footer'];
